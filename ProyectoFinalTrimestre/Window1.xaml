        <TextBox x:Name="Textbox6" HorizontalAlignment="Left" Height="23" Margin="178,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" PreviewTextInput="NumberValidationTextBox" Background="Black" Foreground="White" BorderBrush="#FF5C8D60" FontFamily="Lucida Console"/>

