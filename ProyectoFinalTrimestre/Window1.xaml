        <TextBox x:Name="Textbox1" HorizontalAlignment="Left" Height="23" Margin="178,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Background="Black" Foreground="White" BorderBrush="#FF5C8D60" FontFamily="Lucida Console"/>
        <TextBox x:Name="Textbox2" HorizontalAlignment="Left" Height="23" Margin="178,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" Background="Black" Foreground="White" BorderBrush="#FF5C8D60" FontFamily="Lucida Console"/>
